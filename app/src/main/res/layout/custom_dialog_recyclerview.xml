<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/public_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/dialog_listorder_mess_delete_orderjob1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/dialog_listorder_mess_delete_orderjob2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="-7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="@dimen/public_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:paddingVertical="0dp"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:text="Customer ID: "/>
                <EditText android:id="@+id/edtMyJobCustID"
                    android:hint="This is ID"
                    android:enabled="false"/>

            </TableRow>
            <TableRow>
                <TextView
                    android:text="Customer Name: "/>

                <EditText
                    android:id="@+id/edtMyJobCustName"
                    android:enabled="false"
                    android:hint="This is name" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Address: "/>
                <EditText android:id="@+id/edtMyJobAddress"
                    android:hint="This is address"
                    android:enabled="false"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Date plan: "/>
                <EditText  android:id="@+id/edtMyJobCustDate"
                    android:hint="This is date"
                    android:enabled="false"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Note: "/>
                <EditText android:id="@+id/edtMyJobNote"
                    android:hint="This is note"
                    android:enabled="false"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/txtCustomDialogNegativeButton"
            android:layout_marginLeft="@dimen/public_padding"
            android:text="Cancel"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="#2C2C2B"
            android:layout_width="2dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtCustomDialogPositiveButton"
            android:textColor="#CF0F2C"
            android:gravity="center"
            android:layout_marginRight="@dimen/public_padding"
            android:text="Delete"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>